    <!-- Safety Stock Warning Modal -->
    <div id="safetyStockModal" style="display:none;position:fixed;top:0;left:0;width:100vw;height:100vh;background:rgba(0,0,0,0.4);z-index:3000;justify-content:center;align-items:center;">
        <div style="background:#fff;padding:32px 28px 24px 28px;border-radius:10px;box-shadow:0 6px 32px rgba(0,0,0,0.18);max-width:350px;width:90vw;position:relative;text-align:center;">
            <span id="closeSafetyModal" style="position:absolute;top:10px;right:16px;font-size:1.5em;color:#888;cursor:pointer;">&times;</span>
            <div style="font-size:2.5em;color:#ff9800;margin-bottom:10px;">&#9888;</div>
            <div style="font-size:1.15em;color:#c0392b;font-weight:600;margin-bottom:18px;">Warning: Some products or raw materials are at or below the safety stock (10).</div>
            <button id="goToAlertsBtn" style="background:#ff9800;color:#fff;border:none;border-radius:6px;padding:10px 28px;font-size:1em;font-weight:500;cursor:pointer;transition:background 0.2s;">Go to Alerts for more details</button>
        </div>
    </div>
    <script src="/js/Employee/Inventory/InventoryManager.js"></script>
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        fetch('/api/safety-stock-alert')
            .then(res => res.json())
            .then(data => {
                if (data.hasAlert) {
                    const modal = document.getElementById('safetyStockModal');
                    modal.style.display = 'flex';
                    document.getElementById('goToAlertsBtn').onclick = function() {
                        window.location.href = '/Employee/Inventory/InvManagerAlerts';
                    };
                    document.getElementById('closeSafetyModal').onclick = function() {
                        modal.style.display = 'none';
                    };
                    // Dismiss modal when clicking outside the content
                    modal.onclick = function(e) {
                        if (e.target === modal) modal.style.display = 'none';
                    };
                }
            });
    });

    async function getSafetyStockValue() {
        const res = await fetch('/api/safety-stock-value');
        const data = await res.json();
        return data.value || 10;
    }

    function getStockStatus(quantity, safetyStock) {
        if (quantity === 0) return { label: 'Out of Stock', class: 'alerts-status-out' };
        if (quantity > 0 && quantity <= safetyStock) return { label: 'Critical Stock', class: 'alerts-status-critical' };
        if (quantity > safetyStock && quantity <= safetyStock * 2) return { label: 'Low Stock', class: 'alerts-status-low' };
        return { label: '', class: '' };
    }

    // Update bell icon dropdown
    alertsBellBtn.addEventListener('click', async function(e) {
        e.stopPropagation();
        if (alertsDropdown.style.display === 'block') {
            alertsDropdown.style.display = 'none';
            return;
        }
        alertsDropdown.style.display = 'block';
        alertsDropdownLoaded = false;
        alertsDropdownContent.innerHTML = '<div style="color:#888;text-align:center;padding:18px 0;">Loading...</div>';
        try {
            const [alertsRes, safetyRes] = await Promise.all([
                fetch('/Employee/Inventory/InvManagerAlerts/Data'),
                fetch('/api/safety-stock-value')
            ]);
            const alertsData = await alertsRes.json();
            const safetyStock = (await safetyRes.json()).value || 10;
            let html = '';
            if ((alertsData.products && alertsData.products.length > 0) || (alertsData.rawMaterials && alertsData.rawMaterials.length > 0)) {
                if (alertsData.products && alertsData.products.length > 0) {
                    html += '<div class="alerts-product-header">Products</div>';
                    alertsData.products.forEach(product => {
                        const status = getStockStatus(product.StockQuantity, safetyStock);
                        if (!status.label) return;
                        html += `<div class="alerts-row"><span style="flex:1;">${product.Name}</span><span class="${status.class}">${status.label}</span></div>`;
                    });
                }
                if (alertsData.rawMaterials && alertsData.rawMaterials.length > 0) {
                    html += '<div class="alerts-material-header">Raw Materials</div>';
                    alertsData.rawMaterials.forEach(material => {
                        const status = getStockStatus(material.QuantityAvailable, safetyStock);
                        if (!status.label) return;
                        html += `<div class="alerts-row"><span style="flex:1;">${material.Name}</span><span class="${status.class}">${status.label}</span></div>`;
                    });
                }
            } else {
                html = '<div style="color:#888;text-align:center;padding:18px 0;">No low, critical, or out of stock alerts.</div>';
            }
            alertsDropdownContent.innerHTML = html;
            alertsDropdownLoaded = true;
        } catch (err) {
            alertsDropdownContent.innerHTML = '<div style="color:#c00;text-align:center;padding:18px 0;">Failed to load alerts.</div>';
        }
    });

    // Update Priority Alerts section
    async function loadAlerts() {
        try {
            const [alertsRes, safetyRes] = await Promise.all([
                fetch('/Employee/Inventory/InvManagerAlerts/Data'),
                fetch('/api/safety-stock-value')
            ]);
            const data = await alertsRes.json();
            const safetyStock = (await safetyRes.json()).value || 10;
            const alertsContainer = document.getElementById('alertsContainer');
            if (data.success && (data.products?.length > 0 || data.rawMaterials?.length > 0)) {
                let alertsHTML = '';
                // Add product alerts
                if (data.products && data.products.length > 0) {
                    data.products.forEach(product => {
                        const status = getStockStatus(product.StockQuantity, safetyStock);
                        if (!status.label) return;
                        alertsHTML += `