    <script>
        // Dropdown functionality for sidebar
        document.querySelectorAll('.dropdown-toggle').forEach(item => {
            item.addEventListener('click', event => {
                event.preventDefault();
                const dropdownMenu = item.nextElementSibling;
                const isVisible = dropdownMenu.style.display === 'block';
                
                // Close all other dropdowns first
                document.querySelectorAll('.dropdown-menu').forEach(menu => {
                    menu.style.display = 'none';
                });
                
                // Toggle the clicked dropdown
                dropdownMenu.style.display = isVisible ? 'none' : 'block';
            });
        });

        // Close dropdowns when clicking outside
        document.addEventListener('click', function(event) {
            const dropdowns = document.querySelectorAll('.dropdown');
            dropdowns.forEach(dropdown => {
                if (!dropdown.contains(event.target)) {
                    const dropdownMenu = dropdown.querySelector('.dropdown-menu');
                    if (dropdownMenu) {
                        dropdownMenu.style.display = 'none';
                    }
                }
            });
        });
    </script>
    <script>
    async function updateSafetyStockUI() {
        const res = await fetch('/api/safety-stock-value');
        const data = await res.json();
        const value = data.value || 10;
        document.getElementById('safetyStockInput').value = value;
        document.getElementById('legendCritical').textContent = value;
        document.getElementById('legendLowStart').textContent = value + 1;
        document.getElementById('legendLowEnd').textContent = value * 2;
    }
    document.addEventListener('DOMContentLoaded', function() {
        updateSafetyStockUI();
        document.getElementById('safetyStockForm').onsubmit = async function(e) {
            e.preventDefault();
            const value = parseInt(document.getElementById('safetyStockInput').value);
            if (!value || value < 1) return alert('Enter a valid safety stock value.');
            const res = await fetch('/api/safety-stock-value', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ value })
            });
            if (res.ok) {
                updateSafetyStockUI();
                location.reload();
            } else {
                alert('Failed to update safety stock value.');
            }
        };
        
    });
    </script>
