        <div class="main-content">
            <div class="header">
                <h2>Delivery Orders</h2>
            </div>
            <div class="content-area">
                <% if (orders && orders.length > 0) { %>
                    <div style="display: flex; flex-wrap: wrap; gap: 24px;">
                        <% orders.forEach(function(order) { %>
                            <div style="background: #fff; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.08); padding: 24px; min-width: 340px; max-width: 420px; flex: 1 1 340px; border-left: 6px solid #f39c12; margin-bottom: 12px; display: flex; flex-direction: column; height: 520px;" class="order-card">
                                <div style="flex: 1 1 auto; overflow-y: auto; min-height: 0;" class="order-details-summary">
                                    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 10px;">
                                        <div style="font-weight: 600; font-size: 1.1em;">Order #<%= order.OrderID %></div>
                                        <span style="background: #f39c12; color: #fff; border-radius: 12px; padding: 4px 14px; font-size: 0.95em; font-weight: 600;">Delivery</span>
                                    </div>
                                    <div style="font-size: 0.97em; color: #555; margin-bottom: 8px;">Placed: <%= order.FormattedOrderDate || new Date(order.OrderDate).toLocaleString('en-US') %></div>
                                    <hr style="border: none; border-top: 1.5px solid #e0e0e0; margin: 10px 0;" />
                                    <div style="margin-bottom: 10px;">
                                        <div style="font-weight: bold;">Customer:</div>
                                        <div><%= order.CustomerName %> (<%= order.CustomerEmail %>)<br>Phone: <%= order.CustomerPhone %></div>
                                    </div>
                                    <hr style="border: none; border-top: 1.5px solid #e0e0e0; margin: 10px 0;" />
                                    <div style="margin-bottom: 10px;">
                                        <div style="font-weight: bold;">Shipping Address:</div>
                                        <div><%= order.AddressLabel ? order.AddressLabel + ': ' : '' %><%= [order.HouseNumber, order.Street, order.Barangay, order.City, order.Province, order.Region, order.PostalCode, order.Country].filter(Boolean).join(', ') %></div>
                                    </div>
                                    <hr style="border: none; border-top: 1.5px solid #e0e0e0; margin: 10px 0;" />
                                    <div style="margin-bottom: 10px;">
                                        <div style="font-weight: bold;">Products:</div>
                                        <% if (order.items && order.items.length > 0) { %>
                                            <% order.items.forEach(function(item) { %>
                                                <div style="display: flex; align-items: center; gap: 12px; background: #f8f9fa; border-radius: 6px; padding: 7px 10px; margin-bottom: 6px;">
                                                    <% if (item.VariationImageURL) { %>
                                                        <img src="<%= item.VariationImageURL %>" alt="<%= item.VariationName || item.Name %>" style="width: 44px; height: 44px; object-fit: cover; border-radius: 6px; background: #eee;" />
                                                    <% } else if (item.ImageURL) { %>
                                                        <img src="<%= item.ImageURL %>" alt="<%= item.Name %>" style="width: 44px; height: 44px; object-fit: cover; border-radius: 6px; background: #eee;" />
                                                    <% } else { %>
                                                        <div style="width: 44px; height: 44px; background: #eee; border-radius: 6px; display: flex; align-items: center; justify-content: center; color: #aaa; font-size: 20px;">🖼️</div>
                                                    <% } %>
                                                    <div style="flex:1;">
                                                        <div style="font-weight: 600; font-size: 1em;"><%= item.Name %></div>
                                                        <% if (item.VariationName) { %>
                                                            <div style="font-size: 0.9em; color: #666; margin: 2px 0;">
                                                                <span style="background: #e3f2fd; color: #1976d2; padding: 2px 6px; border-radius: 4px; font-size: 0.85em; font-weight: 500;">
                                                                    <%= item.VariationName %>
                                                                </span>
                                                                <% if (item.Color) { %>
                                                                    <span style="color: #666; margin-left: 6px;">• <%= item.Color %></span>
                                                                <% } %>
                                                            </div>
                                                        <% } %>
                                                        <div style="font-size: 0.93em; color: #888;">Qty: <%= item.Quantity %></div>
                                                    </div>
                                                    <div style="font-weight: 600; color: #333;">₱<%= Number(item.PriceAtPurchase).toLocaleString(undefined, { minimumFractionDigits: 2 }) %></div>
                                                </div>
                                            <% }); %>
                                        <% } else { %>
                                            <div>No products found.</div>
                                        <% } %>
                                    </div>
                                    <hr style="border: none; border-top: 1.5px solid #e0e0e0; margin: 10px 0;" />
                                    <div style="margin-bottom: 10px;">
                                        <div style="font-weight: bold;">Payment Method:</div>
                                        <div><%= order.PaymentMethod %></div>
                                    </div>
                                    <hr style="border: none; border-top: 1.5px solid #e0e0e0; margin: 10px 0;" />
                                    <div style="margin-bottom: 10px;">
                                        <div style="font-weight: bold;">Delivery Method:</div>
                                        <div><%= order.DeliveryTypeName || 'Pick up' %></div>
                                    </div>
                                    <hr style="border: none; border-top: 1.5px solid #e0e0e0; margin: 10px 0;" />
                                    <div style="margin-bottom: 10px;">
                                        <div style="font-weight: bold;">Delivery Cost:</div>
                                        <div>₱<%= Number(order.DeliveryCost || 0).toLocaleString(undefined, { minimumFractionDigits: 2 }) %></div>
                                    </div>
                                    <hr style="border: none; border-top: 1.5px solid #e0e0e0; margin: 10px 0;" />
                                    <div style="margin-bottom: 10px;">
                                        <div style="font-weight: bold;">Order Total:</div>
                                        <div style="font-weight: bold; font-size: 1.1em; color: #222;">₱<%= Number(order.TotalAmount).toLocaleString(undefined, { minimumFractionDigits: 2 }) %></div>
                                    </div>
                                </div>
                                <div class="order-actions-bar">
                                    <button class="order-action-btn proceed" data-order-id="<%= order.OrderID %>">Proceed to Next Process</button>
                                    <button class="order-action-btn cancel" data-order-id="<%= order.OrderID %>">Cancel Order</button>
                                </div>
                                <button type="button" class="view-details-btn" onclick="toggleCardSize(this)">View Details</button>
                            </div>
                        <% }); %>
                    </div>
                <% } else { %>
                    <div style="text-align:center; color:#888; font-size:1.1em;">No delivery orders found.</div>
                <% } %>
            </div>
        </div>
    </div>
    <!-- Confirmation Modals -->
    <div id="modal-bg" style="display:none; position:fixed; top:0; left:0; width:100vw; height:100vh; background:rgba(0,0,0,0.25); z-index:1000;"></div>
    <div id="confirm-modal" style="display:none; position:fixed; top:50%; left:50%; transform:translate(-50%,-50%); background:#fff; border-radius:10px; box-shadow:0 2px 16px rgba(0,0,0,0.18); padding:32px 28px; z-index:1001; min-width:320px; max-width:90vw;">
        <div id="modal-message" style="font-size:1.1em; margin-bottom:18px;"></div>
        <div style="display:flex; gap:12px; justify-content:flex-end;">
            <button id="modal-cancel" style="background:#eee; color:#333; border:none; border-radius:5px; padding:7px 18px; font-weight:600;">Cancel</button>
            <button id="modal-confirm" style="background:#2980ef; color:#fff; border:none; border-radius:5px; padding:7px 18px; font-weight:600;" disabled>Confirm (<span id="modal-timer">5</span>s)</button>
        </div>
    </div>
    <!-- Popup Notification -->
    <div id="popup-notif" style="display:none; position:fixed; top:32px; right:32px; background:#27ae60; color:#fff; padding:16px 32px; border-radius:8px; font-weight:600; font-size:1.1em; z-index:2000; box-shadow:0 2px 12px rgba(0,0,0,0.12);">Success!</div>
    <script>
    (function(){
        let modalBg = document.getElementById('modal-bg');
        let modal = document.getElementById('confirm-modal');
        let modalMsg = document.getElementById('modal-message');
        let modalCancel = document.getElementById('modal-cancel');
        let modalConfirm = document.getElementById('modal-confirm');
        let modalTimer = document.getElementById('modal-timer');
        let popup = document.getElementById('popup-notif');
        let orderId = null, timer = null, seconds = 5;
        function showModal(msg, cb) {
            modalMsg.textContent = msg;
            modalBg.style.display = 'block';
            modal.style.display = 'block';
            modalConfirm.disabled = true;
            seconds = 5;
            modalTimer.textContent = seconds;
            timer = setInterval(()=>{
                seconds--;
                modalTimer.textContent = seconds;
                if(seconds<=0){
                    modalConfirm.disabled = false;
                    modalConfirm.textContent = 'Confirm';
                    clearInterval(timer);
                }
            },1000);
            modalConfirm.onclick = function(){
                cb();
                hideModal();
            };
            modalCancel.onclick = hideModal;
        }
        function hideModal(){
            modalBg.style.display = 'none';
            modal.style.display = 'none';
            if(timer) clearInterval(timer);
            modalConfirm.disabled = true;
            modalConfirm.textContent = 'Confirm (<span id="modal-timer">5</span>s)';
        }
        function showPopup(msg){
            popup.textContent = msg;
            popup.style.display = 'block';
            setTimeout(()=>{popup.style.display='none';}, 2200);
        }
        document.querySelectorAll('.order-action-btn.proceed').forEach(btn=>{
            btn.onclick = function(){
                orderId = btn.getAttribute('data-order-id');
                showModal('Proceed this order to Receive?', function(){
                    fetch(`/Employee/Admin/OrdersDelivery/Proceed/${orderId}`, {method:'POST', headers:{'Content-Type':'application/json'}})
                    .then(r=>r.json()).then(data=>{
                        if(data.success){
                            showPopup('Order proceeded to Receive!');
                            setTimeout(()=>{location.reload();}, 1200);
                        } else {
                            showPopup('Failed to proceed order.');
                        }
                    });
                });
            };
        });
        document.querySelectorAll('.order-action-btn.cancel').forEach(btn=>{
            btn.onclick = function(){
                orderId = btn.getAttribute('data-order-id');
                showModal('Cancel this order? This cannot be undone.', function(){
                    fetch(`/Employee/Admin/OrdersDelivery/Cancel/${orderId}`, {method:'POST', headers:{'Content-Type':'application/json'}})
                    .then(r=>r.json()).then(data=>{
                        if(data.success){
                            showPopup('Order cancelled.');
                            setTimeout(()=>{location.reload();}, 1200);
                        } else {
                            showPopup('Failed to cancel order.');
                        }
                    });
                });
            };
        });
    })();
    </script>

    <!-- Custom Confirmation Modal -->
    <div id="logoutConfirmModal" class="modal-overlay">
        <div class="modal-content">
            <h3>Confirm Logout</h3>
            <p>Are you sure you want to log out?</p>
            <div class="modal-buttons">
                <button class="modal-button confirm" id="confirmLogoutBtn">Logout</button>
                <button class="modal-button cancel" id="cancelLogoutBtn">Cancel</button>
            </div>
        </div>
    </div>

    <script>
        // Custom Logout Modal Logic
        const logoutConfirmModal = document.getElementById('logoutConfirmModal');
        const confirmLogoutBtn = document.getElementById('confirmLogoutBtn');
        const cancelLogoutBtn = document.getElementById('cancelLogoutBtn');

        async function handleLogout(event) {
            event.preventDefault();
            logoutConfirmModal.classList.add('show');
        }

        confirmLogoutBtn.addEventListener('click', async () => {
            logoutConfirmModal.classList.remove('show');
            try {
                const response = await fetch('/logout', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });
                
                if (response.ok) {
                    window.location.href = '/login';
                } else {
                    console.error('Logout failed');
                    alert('Failed to logout. Please try again.');
                }
            } catch (error) {
                console.error('Error during logout:', error);
                alert('An error occurred during logout. Please try again.');
            }
        });

        cancelLogoutBtn.addEventListener('click', () => {
            logoutConfirmModal.classList.remove('show');
        });

        // Close modal if clicked outside content
        logoutConfirmModal.addEventListener('click', (event) => {
            if (event.target === logoutConfirmModal) {
                logoutConfirmModal.classList.remove('show');
            }
        });
    </script>
