{
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "node start-railway.js",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 30,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "variables": {
    "CI": "false",
    "DISABLE_ESLINT_PLUGIN": "true",
    "GENERATE_SOURCEMAP": "false",
    "NODE_ENV": "production",
    "PORT": "3000"
  }
}
