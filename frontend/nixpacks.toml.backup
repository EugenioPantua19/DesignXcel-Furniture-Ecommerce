# Alternative nixpacks configuration for Railway deployment
# Use this if the main nixpacks.toml doesn't work

[phases.setup]
nixPkgs = ["nodejs_18"]

[phases.install]
cmds = ["npm install"]

[phases.build]
cmds = ["npm run build"]

[start]
cmd = "node server.js"

[variables]
CI = "false"
DISABLE_ESLINT_PLUGIN = "true"
GENERATE_SOURCEMAP = "false"
NODE_ENV = "production"
PORT = "3000"
