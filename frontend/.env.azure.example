# Azure Production Environment Variables for DesignXcel Frontend
# Copy this file to .env.production in your frontend directory

# ===========================================
# API CONFIGURATION
# ===========================================
REACT_APP_API_URL=https://designxcel-api.azurewebsites.net
REACT_APP_WEBSOCKET_URL=https://designxcel-api.azurewebsites.net

# ===========================================
# ENVIRONMENT CONFIGURATION
# ===========================================
REACT_APP_ENVIRONMENT=production

# ===========================================
# FEATURE FLAGS
# ===========================================
REACT_APP_ENABLE_3D_CONFIGURATOR=true
REACT_APP_ENABLE_REAL_TIME_UPDATES=true
REACT_APP_ENABLE_ADMIN_DASHBOARD=true
REACT_APP_ENABLE_PAYMENT_PROCESSING=true
REACT_APP_ENABLE_REVIEWS=true
REACT_APP_ENABLE_WISHLIST=true
REACT_APP_ENABLE_NOTIFICATIONS=true

# ===========================================
# PAYMENT CONFIGURATION
# ===========================================
# Stripe Publishable Key (safe to expose in frontend)
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key_here

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
REACT_APP_APP_NAME=DesignXcel
REACT_APP_APP_VERSION=1.0.0
REACT_APP_COMPANY_NAME=DesignXcel Furniture

# ===========================================
# ANALYTICS CONFIGURATION
# ===========================================
# Uncomment if using Google Analytics
# REACT_APP_GA_TRACKING_ID=GA_MEASUREMENT_ID

# Uncomment if using Application Insights
# REACT_APP_APPINSIGHTS_INSTRUMENTATIONKEY=your-application-insights-key

# ===========================================
# CDN CONFIGURATION
# ===========================================
# If using Azure CDN for static assets
# REACT_APP_CDN_URL=https://your-cdn-endpoint.azureedge.net

# ===========================================
# SOCIAL MEDIA CONFIGURATION
# ===========================================
REACT_APP_FACEBOOK_URL=https://facebook.com/designxcel
REACT_APP_TWITTER_URL=https://twitter.com/designxcel
REACT_APP_INSTAGRAM_URL=https://instagram.com/designxcel
REACT_APP_LINKEDIN_URL=https://linkedin.com/company/designxcel

# ===========================================
# CONTACT INFORMATION
# ===========================================
REACT_APP_CONTACT_EMAIL=contact@designxcel.com
REACT_APP_CONTACT_PHONE=+1-555-0123
REACT_APP_CONTACT_ADDRESS=123 Furniture St, Design City, DC 12345

# ===========================================
# SEO CONFIGURATION
# ===========================================
REACT_APP_SITE_URL=https://www.designxcel.com
REACT_APP_SITE_DESCRIPTION=Modern furniture e-commerce platform with 3D visualization
REACT_APP_SITE_KEYWORDS=furniture,modern,3d,visualization,ecommerce,design

# ===========================================
# DEBUG CONFIGURATION (Production)
# ===========================================
# Set to false in production for performance
REACT_APP_DEBUG_MODE=false
REACT_APP_LOG_LEVEL=error

# ===========================================
# PERFORMANCE CONFIGURATION
# ===========================================
# Enable service worker for caching
REACT_APP_ENABLE_SERVICE_WORKER=true

# Enable code splitting
REACT_APP_ENABLE_CODE_SPLITTING=true

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# Content Security Policy settings
REACT_APP_CSP_ENABLED=true

# ===========================================
# LOCALIZATION
# ===========================================
REACT_APP_DEFAULT_LANGUAGE=en
REACT_APP_SUPPORTED_LANGUAGES=en,es,fr

# ===========================================
# BUSINESS CONFIGURATION
# ===========================================
REACT_APP_BUSINESS_HOURS=Mon-Fri 9AM-6PM EST
REACT_APP_SHIPPING_REGIONS=US,CA,MX
REACT_APP_CURRENCY=USD
REACT_APP_TAX_RATE=0.08
