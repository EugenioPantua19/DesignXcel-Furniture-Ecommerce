# Local Development Environment Configuration
# Copy this file to .env.local and update with your local settings
# .env.local is ignored by git for security

# API Configuration - Local Backend
REACT_APP_API_URL=http://localhost:5000
REACT_APP_API_VERSION=v1

# WebSocket Configuration - Local Backend
REACT_APP_WEBSOCKET_URL=http://localhost:5000

# Application Configuration
REACT_APP_NAME=Office Furniture E-commerce (Local)
REACT_APP_VERSION=1.0.0-dev
REACT_APP_ENVIRONMENT=development

# Feature Flags - Enable all features for development
REACT_APP_ENABLE_3D_CONFIGURATOR=true
REACT_APP_ENABLE_REAL_TIME_UPDATES=true
REACT_APP_ENABLE_ADMIN_DASHBOARD=true
REACT_APP_ENABLE_PAYMENT_PROCESSING=true

# PayMongo Configuration (Test Keys)
REACT_APP_PAYMONGO_PUBLIC_KEY=pk_test_your_test_public_key_here

# Currency and Localization
REACT_APP_DEFAULT_CURRENCY=PHP
REACT_APP_DEFAULT_LANGUAGE=en
REACT_APP_SUPPORTED_CURRENCIES=PHP,USD
REACT_APP_SUPPORTED_LANGUAGES=en,fil

# Build Configuration
GENERATE_SOURCEMAP=true

# Development Configuration
REACT_APP_DEBUG_MODE=true
REACT_APP_LOG_LEVEL=debug

# Static Asset Configuration
REACT_APP_ASSETS_URL=/
REACT_APP_MODELS_PATH=/models
REACT_APP_IMAGES_PATH=/images
REACT_APP_3D_MODELS_PATH=/models

# Development Tools
REACT_APP_ENABLE_DEVTOOLS=true
REACT_APP_MOCK_API=false
